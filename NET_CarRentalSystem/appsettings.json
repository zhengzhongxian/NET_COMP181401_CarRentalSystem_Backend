{
  "ConnectionStrings": {
    "RenticarWriteDbContext": "Data Source=sqlserver,1433;Database=Renticar_WriteDB;User ID=sa;Password=Password123!;Trusted_Connection=False;Encrypt=True;TrustServerCertificate=True;",
    "RenticarReadDbContext": "Data Source=sqlserver,1433;Database=Renticar_ReadDB;User ID=sa;Password=Password123!;Trusted_Connection=False;Encrypt=True;TrustServerCertificate=True;",
    "Redis": "redis:6379"
  },
  "DatabaseInitializationSettings": {
    "MaxRetries": 12,
    "DbRetryDelayInSeconds": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "CloudinarySettings": {
    "CloudName": "your-cloud-name",
    "ApiKey": "your-api-key",
    "ApiSecret": "your-api-secret"
  },
  "Quartz": {
    "CheckToolAlive": {
      "JobName": "CheckToolAlive?",
      "CronExpression": "0 * * * * ?"
    }
  },
  "JwtSettings": {
    "Key": "",
    "Issuer": "RenticarAPI",
    "Audience": "RenticarClient",
    "AccessTokenDurationInMinutes": 15,
    "RefreshTokenDurationInDays": 7
  },
  "EmailSettings": {
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "EmailAddress": "your-email@gmail.com",
      "Password": "your-app-password",
      "EnableSsl": true,
      "UseCredential": true
    },
    "FromEmailAddress": "your-email@gmail.com",
    "FromDisplayName": "Your App Name"
  },
  "OtpSettings": {
    "OtpExpiryMinutes": 5,
    "MaxOtpAttempts": 3,
    "KeyExpiryHours": 4
  },
  "RsaSettings": {
    "PublicKey": "",
    "PrivateKey": ""
  },
  "AesSettings": {
    "Key": "",
    "IV": ""
  }
}
