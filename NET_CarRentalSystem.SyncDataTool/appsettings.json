{
  "ConnectionStrings": {
    "RenticarWriteDbContext": "Data Source=sqlserver,1433;Database=Renticar_WriteDB;User ID=sa;Password=Password123!;Trusted_Connection=False;Encrypt=True;TrustServerCertificate=True;",
    "RenticarReadDbContext": "Data Source=sqlserver,1433;Database=Renticar_ReadDB;User ID=sa;Password=Password123!;Trusted_Connection=False;Encrypt=True;TrustServerCertificate=True;",
    "Redis": "redis:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "SyncDataToolSettings": {
    "SyncIntervalInSeconds": 2,
    "DbRetryDelayInSeconds": 5,
    "TablesToSync": [
      { "TableName": "bookings", "PrimaryKeyColumn": "booking_id" },
      { "TableName": "customers", "PrimaryKeyColumn": "customer_id" },
      { "TableName": "fuels", "PrimaryKeyColumn": "fuel_id" },
      { "TableName": "locations", "PrimaryKeyColumn": "location_id" },
      { "TableName": "transmissions", "PrimaryKeyColumn": "transmission_id" },
      { "TableName": "vehicle_attributes", "PrimaryKeyColumn": "attribute_id" },
      { "TableName": "vehicle_categories", "PrimaryKeyColumn": "vehicle_categorie_id" },
      { "TableName": "vehicle_images", "PrimaryKeyColumn": "image_id" },
      { "TableName": "vehicles", "PrimaryKeyColumn": "vehicle_id" },
      { "TableName": "users", "PrimaryKeyColumn": "user_id" },
      { "TableName": "role_claims", "PrimaryKeyColumn": "id" },
      { "TableName": "roles", "PrimaryKeyColumn": "role_id" },
      { "TableName": "user_sessions", "PrimaryKeyColumn": "user_session_id" },
      { "TableName": "user_roles", "PrimaryKeyColumn": "user_role_id" },
      { "TableName": "user_logins", "PrimaryKeyColumn": "user_login_id" }
    ]
  }
}
